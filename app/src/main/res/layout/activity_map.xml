<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.username.hakatonindoorway.MapActivity">

    <FrameLayout
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".8"
        android:name="com.indoorway.android.fragments.sdk.map.IndoorwayMapFragment"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        />

    <LinearLayout
        android:id="@+id/llIntro"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prevInfo"
                android:text="@string/prev_info"
                android:textStyle="bold"
                android:background="#30bced"
                android:textColor="#353632"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="80dp"
                android:onClick="prevInfo"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/repeatInfo"
                android:text="@string/repeat_info"
                android:textStyle="bold"
                android:background="#30bced"
                android:textColor="#353632"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="80dp"
                android:onClick="repeatInfo"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoText"
            android:layout_width="1px"
            android:layout_height="1px"
            />

    </LinearLayout>
</LinearLayout>
